<%= form_for @contact, :url => '/contacts', :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field', :maxlength => 100 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field', :maxlength => 100 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :message, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :message, :class => 'text_area', :maxlength => 10000 %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Send', :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', '/', :class => 'btn' %>
  </div>
<% end %>
